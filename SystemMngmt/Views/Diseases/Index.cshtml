@model IEnumerable<SystemMngmt.Models.Disease>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1">


<script>
    $(document).ready(function () {
        $('#tbPrograms').DataTable({
            responsive: true,
            "lengthMenu": [[5, 10, 15, 20, 25, 50, 100, -1], [5, 10, 15, 20, 25, 50, 100, "All"]]
        });
    });
</script>
<h2>DANH SÁCH TÊN BỆNH</h2>

<p>
    <a class="btn btn-success" data-modal="" href="/Diseases/Create" id="btnCreate">
        THÊM MỚI
    </a>
</p>
<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>
        </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.Raw("<a data-modal='' href='/Diseases/Edit/" + item.Disease_ID + "' id='" + item.Disease_ID + "'  title='Edit'> <span class='glyphicon glyphicon-edit'> </span> </a>") |
            @Html.Raw("<a data-modal='' href='/Diseases/Delete/" + item.Disease_ID + "' id='" + item.Disease_ID + "'  title='Delete'> <span class='glyphicon glyphicon-trash'> </span> </a>")
        </td>
    </tr>
}

</table>
